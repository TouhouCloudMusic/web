{
  "files.exclude": {
    ".eslintcache": true
  },
  "[typescript]": {
    "typescript.preferences.importModuleSpecifierEnding": "minimal"
  },
  // tailwind
  "tailwindCSS.classAttributes": ["class", "class:list", "twMerge"],
  "tailwindCSS.experimental.classRegex": [
    ["(?:twMerge|twJoin)[(]([^)]*)"],
    ["@tw\\s\\*?\\/?[\\s\\S]+?[']([^']*)"],
    ["@tw\\s\\*?\\/?[\\s\\S]+?[`]([^`]*)"],
    ["@tw\\s\\*?\\/?[\\s\\S]+?[\"]([^\"]*)"]
  ]
}
