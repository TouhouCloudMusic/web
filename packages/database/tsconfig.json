{
	"include": ["./**/*.ts"],
	"compilerOptions": {
		"target": "es2016",
		"module": "ES6",
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"composite": true,
		"strict": true,
		// "skipLibCheck": true,
		"declarationMap": true,
		"declaration": true
	}
}
