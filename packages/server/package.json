{
  "name": "server",
  "version": "1.0.50",
  "scripts": {
    "build": "bun build --compile --minify-whitespace --minify-identifiers --minify-syntax --target bun --outfile server ./src/index.ts",
    "drop": "bunx drizzle-kit drop",
    "generate": "bunx drizzle-kit generate",
    "dev": "bun run --watch src/index.ts",
    "fix": "bunx oxlint --fix --fix-suggestions",
    "fmt": "bunx prettier --write .",
    "lint": "bunx oxlint",
    "migrate": "bun ./src/database/migrate.ts",
    "start": "./server",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.1.1",
    "@elysiajs/opentelemetry": "^1.1.6",
    "@elysiajs/swagger": "1.1.3",
    "@node-rs/argon2": "^2.0.0",
    "@oslojs/encoding": "^1.1.0",
    "@touhouclouddb/utils": "workspace:*",
    "dayjs": "^1.11.13",
    "drizzle-orm": "^0.34.1",
    "drizzle-typebox": "^0.1.1",
    "effect": "^3.9.1",
    "elysia": "1.1.21",
    "postgres": "^3.4.4"
  },
  "devDependencies": {
    "bun-types": "^1.1.30",
    "drizzle-kit": "^0.25.0",
    "typescript": "^5.6.3"
  },
  "module": "src/index.js"
}
