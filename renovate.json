{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended",
		":semanticCommitsDisabled"
	],
	"prConcurrentLimit": 0,
	"minimumReleaseAge": "3 days",
	"baseBranches": ["main"],
	"packageRules": [
		{
			"matchManagers": ["npm"],
			"matchPackagePatterns": ["^@tanstack"],
		},
		{
			"matchManagers": ["npm"],
			"matchPackagePatterns": ["^storybook-solidjs"],
		},
		{
			"matchUpdateTypes": ["minor", "patch"],
		}
	]
}
